@using Baski.Configuration
@using Baski.Helpers
@model Baski.Orm.Models.Article

<hr class="half-margins" />
<!-- separator -->
<!-- article summary -->
<div class="row">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <iframe width="800" height="450" src="//@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
        }
        else if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img class="img-responsive" src="@string.Format("{0}{1}", AppSettings.ArticlesImagesPath, Model.ImageUrl)" />
        }

    </div>
    <div class="col-md-8">
        <h4><a class="styleColor" href="/Article/@Model.Id">@Model.Title</a></h4>
        <p>
            @Model.Text
            <small class="block styleSecondColor">@Model.Date.FormatDateTime()</small>
        </p>
    </div>
</div>
<!-- /article summary -->

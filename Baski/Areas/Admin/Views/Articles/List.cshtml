@using Baski.Helpers
@model IEnumerable<Baski.Orm.Models.Article>
@{
    Layout = "../Shared/_Layout.cshtml";
} 

<p>
    <br/>
    <a href="/Admin/Articles/Create" type="button" class="btn btn-primary btn-sm">Создать новую</a>
</p>
<table class="table table-striped table-bordered table-hover dataTable no-footer">
    <tr>
        <th>
            Назание
        </th>
        @*<th>
            Текст   
        </th>*@
        <th>
            Дата публикации
        </th>
        <th>
            Адрес видео(youtube)
        </th>
        <th>
            Картинка
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    int id = item.Id;
    <tr>
        <td>
            <a href="/Admin/Articles/Edit?id=@item.Id">@Html.DisplayFor(modelItem => item.Title)</a> 
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>*@
        <td>
            @item.Date.FormatDateTime()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoUrl)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ImageUrl))
            {
                <img src="~/images/Articles/@item.ImageUrl" width="60" height="60" />
            }
        </td>
        <td>
            <a href="/Admin/Articles/Delete?id=@item.Id">Удалить</a>
            @*@Html.ActionLink("Удалить", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>

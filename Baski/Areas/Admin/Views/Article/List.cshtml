@using Baski.Helpers
@model IEnumerable<Baski.Orm.Models.Article>
@{
    Layout = "../Shared/_Layout.cshtml";
} 

<p>
    <br/>
    <a href="/Admin/Article/Create" type="button" class="btn btn-primary btn-sm">Создать новую</a>
</p>
<table class="table table-striped table-bordered table-hover dataTable no-footer">
    <tr>
        <th>
            Назание
        </th>
        <th>
            Текст   
        </th>
        <th>
            Содержит видео
        </th>
        <th>
            Дата
        </th>
        <th>
            Адрес видео(youtube)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    int id = item.Id;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text).ShortenText()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasVideo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResourceUrl)
        </td>
        <td>
            <a href="/Admin/Article/Edit?id=@item.Id">Редактировать</a> |
            @*@Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |*@
            <a href="/Admin/Article/Delete?id=@item.Id">Удалить</a>
            @*@Html.ActionLink("Удалить", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
